{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "declaration": true,
    "allowJs": false,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
